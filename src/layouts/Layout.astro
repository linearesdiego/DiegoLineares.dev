---
//importaciones css

import "@fontsource-variable/inter";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  body {
    @apply bg-primary text-gray400;
    font-family: "Inter Variable", sans-serif;
  }

  .containerWidth {
    @apply mx-auto  w-full max-w-7xl  p-4 md:px-8;
  }

  .header-transparent {
    background-color: transparent;
  }

  /* Clase para aplicar el desenfoque de fondo */
  .header-blur {
    backdrop-filter: blur(40px);
    transition:
      backdrop-filter 0.3s ease,
      background-color 0.3s ease;
    border-bottom: 1px solid #1f2937;
  }

  #mobile-menu {
    display: none;
    position: absolute; /* Posiciona el menú sobre otros elementos */
    top: 100%; /* Posiciona el menú justo debajo del encabezado */
    left: 0;
    right: 0;
    z-index: 1000; /* Asegura que el menú esté sobre otros elementos */
    background-color: #1f2937; /* Fondo del menú */
  }

  #mobile-menu.show {
    display: flex;
  }
</style>
